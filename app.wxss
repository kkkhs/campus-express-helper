/**app.wxss**/

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 统一头像基础样式（页面可覆盖） */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn-primary {
  background: #1890FF;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-primary:active {
  background: #096dd9;
}

.btn-secondary {
  background: #fff;
  color: #1890FF;
  border: 2rpx solid #1890FF;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  text-align: center;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-accepted {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 88rpx;
  line-height: 1.4;
}

.form-input:focus {
  border-color: #1890FF;
}

/* 通用选择器输入样式 */
.picker-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 88rpx;
  display: flex;
  align-items: center;
}

/* 间距工具类 */
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.p-20 { padding: 20rpx; }

/* 文本样式 */
.text-primary { color: #1890FF; }
.text-secondary { color: #666; }
.text-success { color: #52c41a; }
.text-warning { color: #fa8c16; }

.text-bold { font-weight: bold; }
.text-center { text-align: center; }

.font-24 { font-size: 24rpx; }
.font-28 { font-size: 28rpx; }
.font-32 { font-size: 32rpx; }
