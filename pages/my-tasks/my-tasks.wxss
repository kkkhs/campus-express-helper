/** 我的发布页面样式 **/
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 状态标签栏 */
.status-tabs {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
  transition: color 0.2s;
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

/* 任务列表 */
.task-list {
  height: calc(100vh - 88rpx);
  background: #f5f5f5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

.task-item {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.task-info {
  display: flex;
  align-items: center;
}

.task-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.reward {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.task-content {
  padding: 24rpx 30rpx;
}

.pickup-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.pickup-point {
  background: #1890ff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.company {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.pickup-code {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.contact-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.phone, .wechat {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.remark {
  font-size: 26rpx;
  color: #999;
  background: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.task-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f8f8f8;
  gap: 16rpx;
}

.btn-cancel, .btn-complete, .btn-review, .btn-reviewed {
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  min-width: 140rpx;
  text-align: center;
}

.btn-cancel {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-cancel:active {
  background: #fff1f0;
}

.btn-complete {
  background: #52c41a;
  color: #fff;
}

.btn-complete:active {
  background: #389e0d;
}

.btn-review {
  background: #1890ff;
  color: #fff;
}

.btn-review:active {
  background: #096dd9;
}

.btn-reviewed {
  background: #f5f5f5;
  color: #999;
}

.loading-more, .no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}