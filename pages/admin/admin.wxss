/** 后台管理页面样式 **/
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签栏 */
.admin-tabs {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
  transition: color 0.2s;
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 10%;
  right: 10%;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 26rpx;
  color: #666;
}

/* 内容区域 */
.content-section {
  height: calc(100vh - 88rpx);
}

.content-list {
  height: 100%;
  background: #f5f5f5;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 用户列表 */
.user-item {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.join-time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.rating {
  font-size: 24rpx;
  color: #ffa500;
}

.user-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.user-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.user-status.normal {
  color: #52c41a;
  background: #f6ffed;
}

.user-status.banned {
  color: #ff4d4f;
  background: #fff1f0;
}

.btn-ban {
  padding: 16rpx 24rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  border: none;
  min-width: 160rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
}

.btn-ban:active {
  background: #cf1322;
}

.btn-unban {
  background: #52c41a;
  color: #fff;
}

.btn-unban:active {
  background: #389e0d;
}

/* 任务列表 */
.task-item {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
}

.task-info {
  display: flex;
  align-items: center;
}

.task-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.reward {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.task-content {
  padding: 24rpx 30rpx;
}

.pickup-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.pickup-point {
  background: #1890ff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.company {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.pickup-code {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.publisher-info {
  display: flex;
  align-items: center;
}

.label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.publisher-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 投诉列表 */
.complaint-item {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.complaint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.complaint-time {
  font-size: 24rpx;
  color: #999;
}

.status-badge.pending {
  color: #ff7d00;
  background: #fff7e6;
}

.status-badge.resolved {
  color: #52c41a;
  background: #f6ffed;
}

.status-badge.rejected {
  color: #999;
  background: #f5f5f5;
}

.complaint-content {
  margin-bottom: 20rpx;
}

.complaint-info {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.complainant, .respondent {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.complaint-reason, .complaint-description {
  margin-bottom: 12rpx;
}

.reason-text, .description-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.complaint-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f8f8f8;
}

.btn-resolve, .btn-reject {
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  min-width: 140rpx;
  text-align: center;
}

.btn-resolve {
  background: #52c41a;
  color: #fff;
}

.btn-resolve:active {
  background: #389e0d;
}

.btn-reject {
  background: #ff4d4f;
  color: #fff;
}

.btn-reject:active {
  background: #cf1322;
}

/* 数据统计 */
.statistics-container {
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-icon {
  font-size: 60rpx;
  margin-right: 24rpx;
}

.stat-info {
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.loading-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}
