.container{min-height:100vh;background:#f5f5f5;padding:20rpx}
.form-card{background:#fff;border-radius:16rpx;padding:24rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.08)}
.form-row{margin-bottom:24rpx}
.label{display:block;color:#333;font-size:28rpx;margin-bottom:12rpx;font-weight:500}
.stars{display:flex;gap:12rpx}
.star{font-size:40rpx;color:#ccc}
.star.on{color:#ffa500}
.textarea{width:100%;min-height:160rpx;border:2rpx solid #d9d9d9;border-radius:8rpx;padding:16rpx;box-sizing:border-box;font-size:28rpx}
.btn-submit{margin-top:12rpx;background:#1890ff;color:#fff;border:none;border-radius:8rpx;padding:28rpx;font-size:32rpx;font-weight:500}
.btn-submit:active{background:#096dd9}
