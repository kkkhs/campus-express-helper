/** 发布任务页面样式 **/
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #1890ff;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: ' *';
  color: #ff4d4f;
}

.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
  box-sizing: border-box;
  min-height: 88rpx;
}

.picker-input.placeholder {
  color: #ccc;
}

.picker-input:active {
  border-color: #1890ff;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  min-height: 88rpx;
}

.form-input:focus {
  border-color: #1890ff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #1890ff;
}

/* 酬劳滑块 */
.reward-slider-container {
  padding: 20rpx 0;
}

.reward-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.reward-label {
  font-size: 28rpx;
  color: #333;
}

.reward-amount {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.reward-tips {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 滑块样式 */
slider {
  margin: 20rpx 0;
}

/* 提交区域 */
.submit-section {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-top: 20rpx;
}

.submit-tips {
  text-align: center;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.link {
  color: #1890ff;
  text-decoration: underline;
}

/* 按钮样式 */
.btn-primary {
  width: 100%;
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary:active {
  background: #096dd9;
}

.btn-primary[disabled] {
  background: #d9d9d9;
  color: #fff;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .section {
    padding: 24rpx;
  }
  
  .section-title {
    font-size: 30rpx;
    margin-bottom: 24rpx;
  }
  
  .form-label {
    font-size: 26rpx;
  }
  
  .picker-input, .form-input, .form-textarea {
    font-size: 26rpx;
    padding: 20rpx;
  }
}
