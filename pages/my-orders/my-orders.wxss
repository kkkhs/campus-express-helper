/** 我的接单页面样式 **/
page {
  background: #f7f8fa;
}

.container {
  min-height: 100vh;
}

/* ========== 状态标签栏 ========== */
.status-tabs {
  display: flex;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  padding: 28rpx 0;
  text-align: center;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #667eea;
  font-weight: 600;
  font-size: 30rpx;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  right: 25%;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 3rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

/* ========== 订单列表 ========== */
.order-list {
  height: calc(100vh - 100rpx);
  padding: 24rpx 24rpx 24rpx 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 180rpx 40rpx 180rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  font-weight: 500;
}

/* ========== 订单卡片 ========== */
.order-card {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 0 24rpx 0;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, #f7f8fa 0%, #fff 100%);
  border-bottom: 2rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
}

.location-icon {
  font-size: 24rpx;
}

.location-text {
  font-size: 26rpx;
  color: #0284c7;
  font-weight: 500;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-accepted {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
}

.status-completed {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.reward-badge {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.25);
}

.reward-symbol {
  font-size: 24rpx;
  font-weight: 500;
}

.reward-amount {
  font-size: 32rpx;
  font-weight: 600;
}

/* ========== 卡片主体 ========== */
.card-body {
  padding: 28rpx;
}

.task-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.task-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.task-icon {
  font-size: 32rpx;
}

.task-company {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.task-code {
  font-size: 28rpx;
  color: #666;
}

.publisher-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.publisher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #f0f0f0;
}

.publisher-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.publisher-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.publisher-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.publisher-rating {
  font-size: 24rpx;
  color: #faad14;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.contact-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #fafbfc;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.contact-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.contact-icon {
  font-size: 28rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #666;
}

.remark-section {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: #fffbf0;
  border-radius: 16rpx;
  border-left: 4rpx solid #ffc069;
}

.remark-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.remark-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

/* ========== 卡片底部操作 ========== */
.card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 28rpx;
  background: #fafafa;
  border-top: 2rpx solid #f0f0f0;
}

.btn-action {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 32rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.btn-action::after {
  border: none;
}

.btn-action:active {
  transform: scale(0.95);
}

.btn-secondary {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
}

.btn-primary {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-review {
  background: linear-gradient(135deg, #597ef7 0%, #9254de 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(89, 126, 247, 0.25);
}

.btn-disabled {
  background: #f5f5f5;
  color: #999;
  cursor: not-allowed;
}

.btn-icon {
  font-size: 28rpx;
}

/* ========== 加载状态 ========== */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}
