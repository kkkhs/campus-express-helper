/** 个人中心样式 **/
page {
  background: #f7f8fa;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* ========== 用户信息头部 ========== */
.user-header {
  position: relative;
  padding: 40rpx 32rpx 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
  margin-bottom: 32rpx;
}

.avatar-wrapper {
  position: relative;
  width: 130rpx;
  height: 130rpx;
  margin-right: 24rpx;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.avatar-edit-hint {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #597ef7 0%, #9254de 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.edit-icon {
  font-size: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.rating-row {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  width: fit-content;
}

.rating-star {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.rating-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-right: 8rpx;
}

.rating-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

.action-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(0.98);
}

.action-icon {
  font-size: 36rpx;
}

.action-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* ========== 数据统计卡片 ========== */
.stats-section {
  margin: -60rpx 24rpx 24rpx;
  position: relative;
  z-index: 3;
}

.stats-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* ========== 联系方式卡片 ========== */
.contact-section {
  margin: 0 24rpx 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.contact-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background: #f8f8f8;
}

.contact-left {
  display: flex;
  align-items: center;
}

.contact-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.contact-label {
  font-size: 28rpx;
  color: #666;
}

.contact-right {
  display: flex;
  align-items: center;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
}

.contact-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* ========== 功能菜单 ========== */
.menu-section {
  margin: 0 24rpx 24rpx;
}

.menu-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.menu-icon-wrapper.blue {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.menu-icon-wrapper.green {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.menu-icon-wrapper.orange {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
}

.menu-icon-wrapper.purple {
  background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);
}

.menu-icon-wrapper.red {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
}

.menu-icon {
  font-size: 40rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

.admin-item {
  background: linear-gradient(to right, #fff5f5 0%, #fff 100%);
}

.admin-badge {
  margin-left: 12rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
}

/* ========== 退出登录 ========== */
.logout-section {
  padding: 0 24rpx;
}

.btn-logout {
  width: 100%;
  background: #fff;
  color: #ff4d4f;
  border: none;
  border-radius: 20rpx;
  padding: 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.15);
}

.btn-logout::after {
  border: none;
}

.btn-logout:active {
  background: #fff1f0;
  transform: scale(0.98);
}

.logout-icon {
  font-size: 32rpx;
}

/* 编辑资料弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
  align-items: center;
  justify-content: center;
}

.modal-overlay.show {
  display: flex;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 85%;
  max-width: 600rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  color: #999;
  font-size: 32rpx;
  padding: 10rpx;
}

.edit-form {
  padding: 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1890ff;
}

.modal-buttons {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  padding: 30rpx;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
}

.btn-cancel {
  background: #f8f8f8;
  color: #666;
}

.btn-cancel:active {
  background: #f0f0f0;
}

.btn-confirm {
  background: #1890ff;
  color: #fff;
}

.btn-confirm:active {
  background: #096dd9;
}
.user-card .label {
  color: rgba(255, 255, 255, 0.95);
}
.user-card .value {
  color: rgba(255, 255, 255, 1);
}

/* ========== 头像编辑弹窗 ========== */
.avatar-modal {
  max-width: 600rpx;
}

.avatar-edit-content {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #f0f0f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-img {
  width: 100%;
  height: 100%;
}

.btn-choose-avatar {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #597ef7 0%, #9254de 100%);
  color: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(89, 126, 247, 0.25);
}

.btn-choose-avatar:active {
  opacity: 0.8;
}

.btn-icon {
  font-size: 32rpx;
}

.avatar-hint {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* ========== 表单提示文本 ========== */
.form-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  line-height: 1.5;
}
