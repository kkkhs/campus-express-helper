/** 首页样式 **/
page {
  background: #f7f8fa;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ========== 登录引导层 ========== */
.login-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.95) 0%, rgba(118, 75, 162, 0.95) 100%);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.login-card {
  background: #fff;
  border-radius: 32rpx;
  width: 85%;
  max-width: 600rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

.login-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.login-features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #666;
}

.btn-login {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.btn-login::after {
  border: none;
}

.btn-login:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-icon {
  font-size: 32rpx;
}

/* ========== 筛选栏 ========== */
.filter-bar {
  display: flex;
  background: #fff;
  padding: 24rpx;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 12rpx;
  border-radius: 16rpx;
  background: #f7f8fa;
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
}

.arrow {
  margin-left: 8rpx;
  font-size: 20rpx;
  transform: translateY(2rpx);
}

/* 酬劳筛选弹窗 */
.reward-filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: none;
}

.reward-filter-popup.show {
  display: flex;
  align-items: center;
  justify-content: center;
}

.reward-filter-popup .popup-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 80%;
  max-width: 600rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.reward-range {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 500;
}

.range-sliders {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.range-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.range-label {
  width: 80rpx;
  color: #666;
  font-size: 26rpx;
}
.range-val {
  color: #1890ff;
  font-size: 26rpx;
  margin-left: 8rpx;
}
.range-slider {
  flex: 1;
  width: 100%;
}

.popup-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.popup-buttons button {
  flex: 1;
}

/* ========== 任务列表 ========== */
.task-list {
  flex: 1;
  padding: 24rpx 24rpx 140rpx 24rpx;
}

.task-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 0 0 24rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.task-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.task-location {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.location-icon {
  font-size: 36rpx;
}

.location-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pickup-point {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.company-name {
  font-size: 26rpx;
  color: #999;
}

.task-reward-badge {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.25);
}

.reward-symbol {
  font-size: 24rpx;
  font-weight: 500;
}

.reward-value {
  font-size: 32rpx;
  font-weight: 600;
}

.task-body {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  background: #fafbfc;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  gap: 8rpx;
  border: 2rpx solid #f0f0f0;
}

.info-icon {
  font-size: 28rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
}

.task-remark {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  padding: 16rpx;
  background: #fffbf0;
  border-radius: 16rpx;
  border-left: 4rpx solid #ffc069;
  margin-top: 12rpx;
}

.remark-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.remark-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  flex: 1;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.publisher-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.publisher-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 3rpx solid #f0f0f0;
}

.publisher-details {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.publisher-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.publisher-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #faad14;
}

.time-text {
  font-size: 24rpx;
  color: #999;
}

.action-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #597ef7 0%, #9254de 100%);
  color: #fff;
  padding: 18rpx 32rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(89, 126, 247, 0.25);
}

.action-icon {
  font-size: 28rpx;
}

.action-text {
  font-weight: 600;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 180rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.empty-button:active {
  transform: scale(0.95);
}

/* 加载更多 */
.loading-more,
.no-more-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* ========== 发布按钮 ========== */
.publish-btn {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  padding: 28rpx 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
  font-size: 30rpx;
  font-weight: 600;
  z-index: 900;
  transition: all 0.3s;
}

.publish-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.5);
}

.plus-icon {
  font-size: 36rpx;
  font-weight: bold;
}
