/** 任务详情页面样式 **/
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding: 20rpx;
}

/* 状态头部 */
.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reward {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4d4f;
}

/* 区块样式 */
.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #1890ff;
}

/* 信息项 */
.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  margin-right: 16rpx;
  min-width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.pickup-code {
  font-weight: 500;
  color: #1890ff;
  font-size: 32rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #f0f0f0;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.rating {
  font-size: 24rpx;
  color: #ffa500;
}

/* 联系信息 */
.contact-info {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background: #f8f8f8;
}

.contact-label {
  color: #666;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.contact-value {
  color: #1890ff;
  font-size: 28rpx;
  font-weight: 500;
}

.contact-hint {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
  border-top: 2rpx solid #f0f0f0;
}

/* 操作按钮 */
.action-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons button {
  flex: 1;
}

/* 时间信息 */
.time-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.time-info text {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.time-info text:last-child {
  margin-bottom: 0;
}

/* 按钮样式 */
.btn-primary {
  background: #1890ff;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-primary:active {
  background: #096dd9;
}

.btn-secondary {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 8rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  background: #f0f8ff;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status-accepted {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background: #f5f5f5;
  color: #999;
}
.review-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}
