.container{min-height:100vh;background:#f5f5f5;padding:20rpx}
.tabs{display:flex;background:#fff;border-radius:16rpx;overflow:hidden;margin-bottom:20rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.1)}
.tab{flex:1;text-align:center;padding:24rpx;font-size:28rpx;color:#666}
.tab.active{color:#1890ff;background:#e6f7ff}
.empty{display:flex;justify-content:center;align-items:center;height:60vh;color:#999;font-size:28rpx}
.list{}
.card{background:#fff;border-radius:16rpx;padding:24rpx;margin-bottom:20rpx;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.1)}
.user{display:flex;align-items:center;margin-bottom:12rpx}
.avatar{width:56rpx;height:56rpx;border-radius:50%;margin-right:12rpx;background:#f0f0f0}
.info{flex:1}
.name{display:block;font-size:28rpx;color:#333;font-weight:500}
.time{display:block;font-size:24rpx;color:#999}
.rating{font-size:28rpx;color:#ffa500;margin-bottom:8rpx}
.comment{font-size:28rpx;color:#333;line-height:1.6}
